# EditorConfig is awesome: https://editorconfig.org/

# top-most EditorConfig file
root = true

# A newline ending every file
[*]
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[*.css]
indent_size = 2

[*.js]
indent_size = 2

[package.json]
indent_size = 2

[.yamllint.conf]
indent_size = 2

[*.yml]
indent_size = 2

[*.md]
indent_size = 2

# Ignore paths
[**/vendor/**]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
